@{

}
@model IdentityUserRole

<section class="py-md-0">
    <div class="image image-overlay" style="background-image:url(/images/vault.jpg)"></div>
    <div class="container">
        <div class="row justify-content-center align-items-center vh-md-100">
            <div class="col-md-10 col-lg-5">
                <div class="accordion accordion-portal" id="accordionExample">
                    <div class="card active">
                        <form method="post">
                            <div class="card-header" id="headingOne">
                                <h2 class="mb-0">
                                    <a asp-controller="Home" asp-action="Admin">
                                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            Add New User
                                        </button>
                                    </a>
                                </h2>
                            </div>

                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="hidden" asp-for="@Model.User.Id" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.User.UserName">Email(User Name)</label>
                                        <input asp-for="@Model.User.UserName" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.User.PhoneNumber">PhoneNumber</label>
                                        <input asp-for="@Model.User.PhoneNumber" class="form-control" type="number">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Role.Name">User Role</label>
                                        <select asp-for="@Model.Role.Name" class="form-control">
                                            <option value="">Select a role</option>
                                            @foreach (var role in ViewBag.UserRoles)
                                            {
                                                <option value="@role">@role</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-block btn-primary"><a>Add</a></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>







