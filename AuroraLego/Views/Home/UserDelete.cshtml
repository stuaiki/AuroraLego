@{

}
@model IdentityUserRole

<section class="py-md-0">
    <div class="image image-overlay" style="background-image:url(/images/vault.jpg)"></div>
    <div class="container">
        <div class="row justify-content-center align-items-center vh-md-100">
            <div class="col-md-10 col-lg-5">
                <div class="accordion accordion-portal" id="accordionExample">
                    <div class="card active">
                        <form method="post" asp-controller="Home" asp-action="UserDelete">
                            <input asp-for="User.NormalizedEmail" hidden />
                            <input asp-for="@Model.User.NormalizedEmail" hidden />
                            <input asp-for="@Model.User.EmailConfirmed" hidden />
                            <input asp-for="@Model.User.PasswordHash" hidden />
                            <input asp-for="@Model.User.SecurityStamp" hidden />
                            <input asp-for="@Model.User.ConcurrencyStamp" hidden />
                            <input asp-for="@Model.User.PhoneNumberConfirmed" hidden />
                            <input asp-for="@Model.User.LockoutEnabled" hidden />
                            <input asp-for="@Model.User.LockoutEnd" hidden />
                            <input asp-for="@Model.User.AccessFailedCount" hidden />
                            <input asp-for="@Model.User.Email" hidden />
                            <input asp-for="@Model.User.TwoFactorEnabled" hidden />
                            <input asp-for="@Model.User.PhoneNumber" hidden />
                            <input asp-for="@Model.User.UserName" hidden />
                            <input asp-for="@Model.User.Id" hidden />
                            <input asp-for="@Model.Role.Id" hidden />
                            <div class="card-header" id="headingOne">
                                <h2 class="mb-0">
                                    <input asp-for="@Model.Role.NormalizedName" hidden />
                                    <input asp-for="@Model.Role.ConcurrencyStamp" hidden />
                                    <input asp-for="@Model.Role.Name" hidden />
                                    <a asp-controller="Home" asp-action="Admin">
                                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            Delete Product
                                        </button>
                                    </a>
                                </h2>
                            </div>
                            <div style="margin-bottom: 20px">
                                <h4>Do you really want to delete this account? <br />@Model.User.UserName</h4>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-block btn-danger" style="color: white">Delete</button>
                                <button class="btn btn-block btn-primary" asp-controller="Home" asp-action="Admin"><a>Cancel</a></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>