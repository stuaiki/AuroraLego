@{

}
@model IdentityUserRole

<section class="py-md-0">
    <div class="image image-overlay" style="background-image:url(/images/vault.jpg)"></div>
    <div class="container">
        <div class="row justify-content-center align-items-center vh-md-100">
            <div class="col-md-10 col-lg-5">
                <div class="accordion accordion-portal" id="accordionExample">
                    <div class="card active">
                        <form asp-action="UserEdit" method="post">
                            <div class="card-header" id="headingOne">
                                <h2 class="mb-0">
                                    <a asp-controller="Home" asp-action="Admin">
                                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            Edit Product
                                        </button>
                                    </a>
                                </h2>
                            </div>

                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input asp-for="User.Id" hidden />
                                        <input asp-for="User.NormalizedEmail" hidden />
                                        <input asp-for="@Model.User.NormalizedEmail" hidden />
                                        <input asp-for="@Model.User.EmailConfirmed" hidden />
                                        <input asp-for="@Model.User.PasswordHash" hidden />
                                        <input asp-for="@Model.User.SecurityStamp" hidden />
                                        <input asp-for="@Model.User.ConcurrencyStamp" hidden />
                                        <input asp-for="@Model.User.PhoneNumberConfirmed" hidden />
                                        <input asp-for="@Model.User.LockoutEnabled" hidden />
                                        <input asp-for="@Model.User.LockoutEnd" hidden />
                                        <input asp-for="@Model.User.AccessFailedCount" hidden />
                                        <label asp-for="User.UserName">User Name</label>
                                        <input class="form-control" asp-for="User.UserName" readonly />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="User.Email">Email</label>
                                        <input asp-for="User.Email" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.User.PhoneNumber">Phone Number</label>
                                        <input asp-for="@Model.User.PhoneNumber" class="form-control">
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="@Model.User.TwoFactorEnabled">Two Factor Enable</label>
                                        <select asp-for="@Model.User.TwoFactorEnabled" class="form-control">
                                            @foreach (var factor in ViewBag.TwoFactor)
                                            {
                                                <option value="@factor">@factor</option>
                                            }
                                        </select>
                                    </div>
                                    <input asp-for="@Model.Role.Id" hidden />
                                    <input asp-for="@Model.Role.NormalizedName" hidden />
                                    <input asp-for="@Model.Role.ConcurrencyStamp" hidden />
                                    <label asp-for="@Model.Role.Name">User Role</label>
                                    <div class="form-group">
                                        <select asp-for="@Model.Role.Name" class="form-control">
                                            @foreach (var role in ViewBag.UserRoles)
                                            {
                                                <option value="@role">@role</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-block btn-primary"><a>Edit</a></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>