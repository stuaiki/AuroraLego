
@model DatabaseModel

<!-- latest products -->
<section style="margin-top: 20px;">
    <div class="container">
      <div class="row gutter-1 align-items-end" style="margin-bottom: 13px;">
        <div class="col-md-6">
          <h2>Database</h2>
        </div>
        <div class="col-md-6 text-md-right">
          <ul class="nav nav-tabs lavalamp" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="Users-tab" data-toggle="tab" href="#Users" role="tab" aria-controls="Users" aria-selected="true">Users</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="Product-tab" data-toggle="tab" href="#ProductTable" role="tab" aria-controls="Products" aria-selected="false">Products</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="Orders-tab" data-toggle="tab" href="#OrderTable" role="tab" aria-controls="Orders" aria-selected="false">Orders</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
        <button class="btn btn-sm btn-outline-primary" style="margin-left: 18px;"><a>Add User</a></button>
        <button class="btn btn-sm btn-outline-primary" style="margin-left: 18px;"><a asp-controller="Home" asp-action="AddProduct">Add Product</a></button>
      </div>
    <div class="row">
      <div class="col">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="Users" role="tabpanel">
            <div class="row gutter-2 gutter-md-3">
              <table class="table">
                <thead class="thead-dark" style="border-color: #000000">
                <tr>
                  <th scope="col"></th>
                  <th scope="col">Username</th>
                  <th scope="col">Email</th>
                  <th scope="col">Two Factor Authentication</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Users)
                {
                  <tr>
                    <th scope="row">1</th>
                    <th>@item.Id</th>
                    <th>@item.UserName</th>
                    <th>@item.TwoFactorEnabled</th>
                    <td style="padding-left: 20px; padding-right: 20px"><a class="btn btn-sm btn-primary" asp-controller="Home" asp-action="ProductItemEdit" asp-route-id="@item.Id">View/Edit</a></td>
                    <td style="padding-left: 20px; padding-right: 20px"><a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="ProductItemDelete" asp-route-id="@item.Id">Delete</a></td>
                  </tr>
                }
                </tbody>
              </table>
            </div>
          </div>
          <div class="tab-pane fade" id="ProductTable" role="tabpanel">
            <div class="row gutter-2 gutter-md-3">
              <table class="table">
                <thead class="thead-dark" style="border-color: #000000">
                <tr>
                  <th scope="col">product_ID</th>
                  <th scope="col">name</th>
                  <th scope="col">year</th>
                  <th scope="col">num_parts</th>
                  <th scope="col">price</th>
                  <th scope="col">color</th>
                  <th scope="col">category</th>
                  <th></th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Products)
                {
                  <tr>
                    <th scope="row">@item.product_ID</th>
                    <td>@item.name</td>
                    <td>@item.year</td>
                    <td>@item.num_parts</td>
                    <td>@item.price</td>
                    <td>@item.primary_color</td>
                    <td>@item.category</td>
                    <td style="padding-left: 20px; padding-right: 20px"><a class="btn btn-sm btn-primary" asp-controller="Home" asp-action="ProductItemEdit" asp-route-id="@item.product_ID">View/Edit</a></td>
                    <td style="padding-left: 20px; padding-right: 20px"><a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="ProductItemDelete" asp-route-id="@item.product_ID">Delete</a></td>
                  </tr>
                }
                </tbody>
              </table>
            </div>
          </div>
          <div class="tab-pane fade" id="OrderTable" role="tabpanel">
            <div class="row gutter-2 gutter-md-3">
              <table class="table">
                <thead class="thead-dark" style="border-color: #000000">
                <tr>
                  <th scope="col">Transaction ID</th>
                  <th scope="col">Customer_ID</th>
                  <th scope="col">Date</th>
                  <th scope="col">Day Of Week</th>
                  <th scope="col">Time</th>
                  <th scope="col">Amount</th>
                  <th scope="col">Fraudulent</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Orders)
                {
                  <tr>
                    <th scope="row">@item.transaction_ID</th>
                    <td>@item.customer_ID</td>
                    <td>@item.date</td>
                    <td>@item.day_of_week</td>
                    <td>@item.time</td>
                    <td>@item.amount</td>
                    <td class="@(item.fraud == false ? "text-primary" : "text-danger")">@item.fraud</td>
                    <td style="padding-left: 20px; padding-right: 20px"><a class="btn btn-sm btn-outline-primary" asp-controller="Home" asp-action="OrderView" asp-route-id="@item.transaction_ID">View</a></td>
                  </tr>
                }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
</section>
